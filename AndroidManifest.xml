<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.oskarsson.mobilepotato"
	android:versionCode="1"
	android:versionName="0.1"
	>
	<uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.INTERNET" /> 

	<application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@style/MobilePotatoTheme">
		<activity android:name=".MainActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity android:name=".AddMovieActivity" android:label="CouchPotato">
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="text/plain" />
			</intent-filter>
		</activity>
		
		<service android:name=".AddMovieService" android:label="1 CP Service">
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="text/plain" />
			</intent-filter>
		</service>
		
		<activity android:name="PreferencesActivity"></activity>

	</application>
</manifest>